<h2>Crypto Currency Lookup</h2><br/>

<%= form_tag home_lookup_path, :method => 'POST' do %>
  <%= text_field_tag 'sym', nil, placeholder: 'Enter Crypto Symbol', size: 50 %>
  <%= submit_tag 'Lookup' %>
<% end %>

<br/>

<% if @symbol %>
  <% @lookup_coin['data'].each do |x| %>
    <% if @symbol == x[1]['symbol'] %>
      <%= x[1]['name'] %>: $<%= x[1]['quotes']['USD']['price'] %><br/>
      Rank: <%= x[1]['rank'] %><br/><br/>
    <% end %>
  <% end %>
<% end %>
